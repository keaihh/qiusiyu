<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<bean id="car" class="com.fc.entity.Car">
    <constructor-arg name="speed" type="java.lang.Float" value="150"/>
    <constructor-arg name="color" type="java.lang.String" value="绿色"/>

</bean>
    <bean id="car1" class="com.fc.entity.Car">
        <constructor-arg name="speed" type="java.lang.Float" value="300"/>
        <constructor-arg name="color" type="java.lang.String" value="红色"/>

    </bean>
    <bean id="person" class="com.fc.entity.Person">
    <constructor-arg name="age" type="java.lang.Integer" value="18"/>
    <constructor-arg name="gender" type="java.lang.String" value="女"/>
    <constructor-arg name="name" type="java.lang.String" value="小可爱"/>
    <constructor-arg name="car" type="com.fc.entity.Car" ref="car1"/>
</bean>
</beans>